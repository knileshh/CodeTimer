{
  "manifest_version": 3,
  "name": "Codeforces Timer Extension",
  "version": "1.1.0",
  "description": "A floating stopwatch for Codeforces problem solving with persistent timing and stats tracking",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "https://codeforces.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/*"],
      "js": ["src/utils/error-handler.js", "src/content-scripts/content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "src/background/background.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Codeforces Timer",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["stats.html"],
      "matches": ["https://codeforces.com/*"]
    }
  ],
  "minimum_chrome_version": "88"
}

