{
  "name": "codeforces-timer-extension",
  "version": "1.1.0",
  "description": "A browser extension that provides a floating stopwatch for Codeforces problem-solving with persistent timing and statistics tracking",
  "main": "background.js",
  "scripts": {
    "build": "echo 'Building extension...' && npm run lint",
    "lint": "eslint *.js --fix",
    "lint:check": "eslint *.js",
    "test": "echo 'Running tests...'",
    "package": "zip -r codeforces-timer-extension.zip . -x '*.git*' 'node_modules/*' '*.zip' '*.md'",
    "dev": "echo 'Starting development mode...'",
    "format": "prettier --write '*.js' '*.json' '*.html' '*.css'",
    "format:check": "prettier --check '*.js' '*.json' '*.html' '*.css'"
  },
  "keywords": [
    "codeforces",
    "timer",
    "stopwatch",
    "competitive-programming",
    "browser-extension",
    "chrome-extension",
    "productivity",
    "tracking"
  ],
  "author": "Nilesh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/codeforces-timer-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/codeforces-timer-extension/issues"
  },
  "homepage": "https://github.com/yourusername/codeforces-timer-extension#readme",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88"
  ]
}
